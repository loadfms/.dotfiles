{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "type": "auto",
        "source": "~/.config/fastfetch/logo.txt",
        "width": 25,
        "height": 13,
        "padding": {
			"top": 2
		}
    },
    "display": {
        "separator": ""
    },
    "modules": [
        {
            "type": "custom",
            "format": "╔═══════════════════════════════════════════════╗"
        },
        {
            "type": "os",
            "key": "  󰣇  OS        ║",
            "format": " {3}",
            "keyColor": "blue"
        },
        {
            "type": "kernel",
            "key": "    Kernel    ║ ",
            "format": "{1} {2}",
            "keyColor": "blue"
        },
        {
            "type": "packages",
            "key": "  󰏗  Packages  ║ ",
            "format": "{2} (pacman){?3}[{3}]{?}",
            "keyColor": "blue"
        },
        {
            "type": "shell",
            "key": "    Shell     ║ ",
            "format": "zsh",
            "keyColor": "blue"
        },
        {
            "type": "terminal",
            "key": "    Terminal  ║ ",
            "format": "{1}",
            "keyColor": "blue"
        },
        {
            "type": "wm",
            "key": "  󰍹  WM        ║ ",
            "format": "{0}",
            "keyColor": "blue"
        },
        {
            "type": "custom",
            "format": "╚═══════════════════════════════════════════════╝"
        },
        {
            "type": "colors",
            "paddingLeft": 20,
            "symbol": "circle"
        },
        {
            "type": "custom",
            "format": "╔═══════════════════════════════════════════════╗"
        },
        {
            "type": "cpu",
            "key": "    CPU       ║ ",
            "format": "{0}",
            "keyColor": "green"
        },
        {
            "type": "gpu",
            "key": "  󰊴  GPU       ║ ",
            "format": "{2}",
            "keyColor": "green"
        },
        {
            "type": "memory",
            "key": "    Memory    ║ ",
            "format": "{1} / {2} ({3})",
            "keyColor": "green"
        },
        {
            "type": "disk",
            "key": "    Disk      ║ ",
            "format": "{1} / {2} ({3})",
            "keyColor": "green"
        },
        {
            "type": "custom",
            "format": "╚═══════════════════════════════════════════════╝"
        },
        {
            "type": "custom",
            "format": " Github   ==>   loadfms",
            "color":{
                "1": "red"
            }
        }
    ]
}
